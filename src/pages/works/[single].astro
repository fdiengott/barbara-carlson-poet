---
import { getCollection, render } from 'astro:content';
import { slugify } from '../../utils/common-utils';
import BaseLayout from '../../layouts/BaseLayout.astro';
//  TODO:
// import type { WorkType } from '@/content.config';
import { removeTemplates } from '@/utils/data-utils';

type WorkType = { title: string; date: string };

interface Props {
    work: {
        data: WorkType;
    };
}

export async function getStaticPaths() {
    const books = await getCollection('book');
    const cleanWorks = removeTemplates(books);

    return cleanWorks.map((work: { data: WorkType }) => {
        return {
            params: { single: slugify(work.data.title) },
            props: { work },
        };
    });
}

const { work } = Astro.props;
const { title, date } = work.data;
const { Content } = await render(work as any);
---

<BaseLayout title={title}>
    <div class="variable-provider">
        <h1 class="title">
            {title}
        </h1>
        <div class="page-wrapper">
            <section>
                <div class="grid">TODO</div>
            </section>
        </div>

        <div class="content-wrapper">
            <Content />
        </div>
    </div>
</BaseLayout>

<style>
    .variable-provider {
        --section-separator: 1.5rem;
        --list-separator: 0.25rem;
    }
    .title {
        border-block-end: 1px solid var(--color-border-primary);
        margin-block-end: var(--section-separator);
    }

    .page-wrapper {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 2rem;

        & > * {
            flex: 1 1 20rem;
        }

        & > section {
            min-width: 20rem;
        }
    }
    .grid {
        display: grid;
        gap: var(--list-separator);
    }

    .content-wrapper {
        margin-block: 2rem;
        padding-block-start: var(--section-separator);
        border-block-start: 1px solid var(--color-border-primary);
        display: none;

        &:has(> *) {
            display: block;
        }

        h2,
        h3,
        h4 {
            font-size: var(--fs-400);
            margin-block-end: var(--spacing-250);
        }

        em {
            font-family: var(--ff-serif);
        }

        ol,
        ul {
            margin-block-end: var(--spacing-300);

            & > li {
                margin-inline-start: var(--spacing-400);
            }
        }

        ol > li {
            list-style-type: upper-roman;
        }
        ul > li {
            list-style-type: disc;
        }
    }

    aside {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
    }

    .year {
        font-size: var(--fs-500);
        font-weight: normal;
    }
</style>
