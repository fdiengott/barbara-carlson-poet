---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BooksList from '@/components/BooksList.astro';
import TranslationsList from '@/components/TranslationsList.astro';
import PoemsList from '@/components/PoemsList.astro';
import EssaysList from '@/components/EssaysList.astro';
import CategoryNav from '@/components/CategoryNav.astro';

const publicationTypes = ['Books', 'Translations', 'Poems', 'Essays'] as const;
---

<BaseLayout title="Publications" description="Poems, translations, and other writings.">
    <CategoryNav categories={publicationTypes} />
    <ul class="category-list">
        <BooksList id={'Books' satisfies (typeof publicationTypes)[number]} />
        <TranslationsList id={'Translations' satisfies (typeof publicationTypes)[number]} />
        <PoemsList id={'Poems' satisfies (typeof publicationTypes)[number]} />
        <EssaysList id={'Essays' satisfies (typeof publicationTypes)[number]} />
    </ul>
</BaseLayout>

<style>
    .category-list {
        display: grid;
        gap: var(--spacing-500);
    }
</style>
