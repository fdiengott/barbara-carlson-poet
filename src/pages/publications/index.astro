---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BooksList from '@/components/BooksList.astro';
import TranslationsList from '@/components/TranslationsList.astro';
import PoemsList from '@/components/PoemsList.astro';
import EssaysList from '@/components/EssaysList.astro';
import CategoryNav from '@/components/CategoryNav.astro';

const publicationTypes = ['Books', 'Poems', 'Translations', 'Essays'] as const;
type Publication = (typeof publicationTypes)[number];

const publications: Record<Publication, typeof BooksList> = {
    Books: BooksList,
    Poems: PoemsList,
    Translations: TranslationsList,
    Essays: EssaysList,
};
---

<BaseLayout title="Publications" description="Poems, translations, and other writings.">
    <CategoryNav categories={publicationTypes} />
    <ul class="category-list">
        {
            publicationTypes.map((type) => {
                const Component = publications[type];
                return <Component id={type} />;
            })
        }
    </ul>
</BaseLayout>

<style>
    .category-list {
        display: grid;
        gap: var(--spacing-500);
    }
</style>
