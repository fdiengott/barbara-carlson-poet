---
import { Image } from 'astro:assets';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { optimizedImageProps } from '@/constants/images';
import type { CollectionEntry } from 'astro:content';

interface Props {
    bio: CollectionEntry<'about'>;
}

const { bio } = Astro.props;
const { title, description, image } = bio.data;
---

<BaseLayout title={title} description={description}>
    <h1>{title}</h1>
    <div class="about">
        {image && <Image src={image.src} alt={image.alt} width={750} height={750} {...optimizedImageProps} />}
        <slot />
    </div>
</BaseLayout>

<style is:global>
    .about :is(p, img) {
        margin-bottom: 1.5rem;
    }
</style>
