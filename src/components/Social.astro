---
import SocialLink from '@/components/SocialLink.astro';

const { source, className = '' } = Astro.props;

const { facebook } = source;
---

<ul class={'social-links ' + className}>
    <SocialLink ariaLabel="facebook" href={facebook} icon="facebook" />
</ul>

<style>
    .social-links {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        width: fit-content;

        nav & {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @container style(--inline-size-s: var(--breakpoint-sm)) {
        .social-links.social-links {
            display: flex;
            flex-wrap: wrap;
        }
    }
</style>
