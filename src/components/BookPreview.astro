---
// TODO: Flesh out styling and additional details as needed

interface Props {
    title: string;
    publisher?: string;
    date: string;
    image: {
        src: string;
        alt: string;
    };
    url: string;
}

const { title, publisher, date, image, url } = Astro.props;
---

<article class="book-preview">
    <h3 class="book-title">{title}</h3>
    <p class="book-meta">{publisher && `${publisher}, `}{date}</p>
</article>

<style>
    .book-preview {
        display: grid;
        gap: var(--spacing-100);
    }

    .book-title {
        font-size: var(--fs-500);
        font-weight: 500;
        margin: 0;
    }

    .book-meta {
        font-size: var(--fs-400);
        margin: 0;
    }
</style>
