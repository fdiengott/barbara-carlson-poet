---
import siteConfig from '@/config/site-config';

const socialLinks = siteConfig.socialLinks || [];
const navLinks = siteConfig.footerNavLinks || [];
---

<footer>
    {
        navLinks.length > 0 && (
            <div class="footer-nav">
                {navLinks.map((link) => (
                    <a class="footer-nav-link" href={link.href}>
                        {link.text}
                    </a>
                ))}
            </div>
        )
    }
    <div class="footer-content">
        <p class="copyright">
            &copy; {new Date().getFullYear()}&nbsp;{siteConfig.title}. All rights reserved.
        </p>
    </div>
</footer>

<style>
    footer {
        padding-block: var(--spacing-600) var(--spacing-400);
    }

    @container style(--inline-size-s: var(--breakpoint-sm)) {
        footer {
            padding-block: var(--spacing-800) var(--spacing-600);
        }
    }

    .footer-nav {
        margin-bottom: 1rem;
        display: flex;
        flex-wrap: wrap;
        column-gap: 1.5rem;
        row-gap: 0.25rem;
    }

    .footer-nav-link {
        font-family: var(--ff-serif);
    }

    .footer-nav-link:hover {
        text-decoration: underline;
        text-underline-offset: 2px;
    }

    .footer-content {
        padding-top: var(--spacing-300);
        display: grid;
        gap: 1rem;
        border-top: 1px dashed var(--color-border-primary);
    }

    .copyright {
        font-size: var(--fs-200);
    }
</style>
